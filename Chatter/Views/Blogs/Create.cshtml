@model Chatter.Models.BlogCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="blog.Title" class="control-label"></label>
                <input asp-for="blog.Title" class="form-control" />
                <span asp-validation-for="blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="blog.BoardId" class="control-label">Board</label>
                <select asp-for="blog.BoardId" class="form-control" asp-items="@(new SelectList(Model.Boards, "Id", "Topic", -1))"></select>
                <span asp-validation-for="blog.BoardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="blog.Content" class="control-label"></label>
                <br />
                @Html.TextAreaFor(m => m.blog.Content)
                <span asp-validation-for="blog.Content" class="text-danger"></span>
            </div>
