@model IEnumerable<Chatter.Models.Board>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Topic)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blogs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href='@(Url.Action("Details", "Boards", new { id = item.Id }))'>@Html.DisplayFor(modelItem => item.Topic)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blogs.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
